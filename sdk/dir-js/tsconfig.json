{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "moduleResolution": "node",
    "module": "es2020",
    "target": "es2017",
    "lib": [
      // ES2017 for async/await
      "ES2017",
      // DOM for the fetch and streams API
      "DOM",
      // ESNext.AsyncIterable for AsyncIterator
      "ESNext.AsyncIterable"
    ],
    "declaration": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "stripInternal": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "ES2020"
    }
  },
  "vitest": {
    "test": {
      "globals": true,
      "environment": "node",
      "include": [
        "test/**/*.test.ts"
      ]
    }
  }
}
