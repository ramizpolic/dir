{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["es2018"],
    "outDir": "./dist",
    "types": ["node"],
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "isolatedModules": true
  },
  "include": [
    "**/*.ts",
    "**/tests/**/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
