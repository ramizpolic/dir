{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "module": "preserve",
    "lib": [
      "ES2017",
      // DOM for the fetch and streams API
      "DOM",
      // ES2018.AsyncIterable for AsyncIterator
      "ES2018.AsyncIterable"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "./.eslintrc.json"
  ]
}
