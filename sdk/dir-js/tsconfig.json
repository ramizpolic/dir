{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "es2020",
    "target": "es2017",
    "lib": [
      // ES2017 for async/await
      "ES2017",
      // DOM for the fetch and streams API
      "DOM",
      // ES2018.AsyncIterable for AsyncIterator
      "ES2018.AsyncIterable"
    ],
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "ES2020"
    }
  }
}
